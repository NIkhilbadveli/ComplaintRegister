<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_complaint_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.crazy.insane.trial.ComplaintDescription"
        tools:showIn="@layout/activity_complaint_description">

        <TextView
            android:id="@+id/desc_sub_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:text="Subject:   "
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/desc_sub_before"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/desc_sub_before"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc_comp_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_sub_before"

            android:layout_marginTop="20dp"
            android:text="Complaint:   "
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_comp_before"
            android:layout_marginTop="20dp"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc_message_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_comp"
            android:text="Message From Admin:   "
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_message_before"
            android:layout_marginTop="25dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc_message_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_message"
            android:layout_marginTop="25dp"
            android:text="Reply"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_message_temp"
            android:layout_marginTop="25dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/reply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reply"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Reply"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>